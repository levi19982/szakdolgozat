<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Egyszeri aláírás"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/eredetialairas"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eredetialairas"
        android:layout_centerHorizontal="true"
        android:text="Eredeti aláírás"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/egyszerialairas"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/textView7"
        android:layout_centerHorizontal="true"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/egyszerialairas"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF5722"
        android:text="Ablakok bezárása"
        app:cornerRadius="20dp" />

</RelativeLayout>