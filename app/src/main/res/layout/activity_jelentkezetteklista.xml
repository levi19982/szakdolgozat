<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jelentkezetteklista"
    android:background="@drawable/hatter">

    <TextView
        android:id="@+id/kapottidopont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/exportalaslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kapottidopont"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/mentesgomb"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FF5722"
                android:text="Adatok exportálása"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/alairasokmegtekintsegomb"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#FF5722"
                android:text="Aláírások megtekintése"
                app:cornerRadius="20dp" />
        </TableRow>

    </LinearLayout>

    <TextView
        android:id="@+id/idopontmentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/sportagmentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/nevmentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/exportalaslayout"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/jelentkezetteknevszerint"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>