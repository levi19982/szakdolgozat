<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statisztika"
    android:background="@drawable/hatter">

    <Spinner
        android:id="@+id/sportvalaszto2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:scrollbarSize="10dp"
        android:translationX="100dp" />

    <TextView
        android:id="@+id/valasztottsportag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sportvalaszto2"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#FF5722"
        android:visibility="gone"/>

    <Button
        android:id="@+id/statisztikalekerese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/valasztottsportag2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF5722"
        android:text="Statisztika lekérése"
        app:cornerRadius="20dp" />

</RelativeLayout>