<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bejelentkezesidopont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/kijelentkezesidopont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bejelentkezesidopont" />

    <TextView
        android:id="@+id/eltoltottido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kijelentkezesidopont" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eltoltottido" />

    <TextView
        android:id="@+id/neptuncode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name" />

    <TextView
        android:id="@+id/alairas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/neptuncode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="20sp" />

    <Button
        android:id="@+id/torlesgomb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alairas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FF5722"
        android:text="Felhasználó törlése"
        app:cornerRadius="20dp" />
</RelativeLayout>