<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hatter">

    <EditText
        android:id="@+id/emailkuldeseidegomb"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/edittextalak"
        android:ems="10"
        android:foregroundGravity="bottom|center_vertical|clip_horizontal|center_horizontal"
        android:gravity="bottom|center_horizontal|center_vertical"
        android:hint="E-mail cím"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailkuldeseidegomb"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF4436"
        android:gravity="center"
        android:text="Küldés ide!"
        app:cornerRadius="20dp" />
</RelativeLayout>