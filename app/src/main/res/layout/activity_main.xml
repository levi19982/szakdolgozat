<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/my_drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
tools:ignore="HardcodedText"
    android:background="@drawable/hatter">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nevmezo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_action_nev"
        android:ems="10"
        android:gravity="center_vertical"
        android:background="@drawable/edittextalak"
        android:hint="Név"
        android:inputType="textPersonName"
        android:translationY="650px" />

    <EditText
        android:id="@+id/neptunkodmezo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/edittextalak"
        android:drawableLeft="@drawable/ic_action_neptunkod"
        android:ems="10"
        android:hint="Neptun kód"
        android:inputType="textPersonName"
        android:translationY="700px" />

    <Button
        android:id="@+id/fenykephozzaadasa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#F44336"
        android:shadowColor="#EF0B0B"
        android:text="Jelentkezés"
        android:textColorLink="#F61717"
        android:translationY="750px"
        app:cornerRadius="20dp"
        app:rippleColor="#FF0000"
        app:strokeColor="#000000" />

    <Button
        android:id="@+id/kijelentkezesgomb"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#F44336"
        android:text="Kijelentkezés"
        android:translationY="850px"
        app:cornerRadius="20dp" />


</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/felugromenu" />

</androidx.drawerlayout.widget.DrawerLayout>